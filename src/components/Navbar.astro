---
import "../global.css";
import koito from "../images/koito.png";
import { Image } from "astro:assets";
import { buttonVariants } from "./ui/button";
import { ModeToggle } from "./ModeToggle";
import NavHamburger from "./NavHamburger";
---

<div
  class="md:max-w-4xl relative mx-auto mt-2 rounded-lg p-2"
  transition:name="nav"
>
  <div class="md:hidden absolute left-4 top-2">
    <ModeToggle client:load />
  </div>
  <NavHamburger client:load />
  <div class="flex flex-row items-center justify-center md:justify-between">
    <div class="flex flex-row items-center">
      <a
        href="/"
        class={`${buttonVariants({ variant: "ghost" })} text-xl text-primary`}
        ><Image
          src={koito}
          alt={"koito"}
          transition:name="koito"
          class="w-8 mr-3 rounded-full"
        />
        <p transition:name="mikumino" class="text-xl font-bold text-primary">
          mikumino
        </p>
      </a>
    </div>
    <div class="hidden md:flex flex-row items-center gap-4">
      <a class={buttonVariants({ variant: "ghost" })} href="/about">About</a>
      <a class={buttonVariants({ variant: "ghost" })} href="/blog">Blog</a>
      <a class={buttonVariants({ variant: "ghost" })} href="/resources"
        >Resources</a
      >
      <a class={buttonVariants({ variant: "ghost" })} href="/other">Other</a>
      <ModeToggle client:load />
    </div>
  </div>
</div>
