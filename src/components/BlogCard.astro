---
import { Image } from "astro:assets";
const {post} = Astro.props;
---
<div class="break-inside-avoid-column">
    <a class="group" href={`/blog/${post.slug}`}>
        <div class="w-full group-hover:shadow-xl mb-6 rounded-lg group-hover:-translate-y-2 transition">
            <Image transition:name={post.data.title} src={post.data.image} alt={post.data.imageAlt} class="w-full mx-auto rounded-lg mb-2" />
            <div class="py-4 px-6">
                <h2 class="text-2xl font-bold text-secondary-foreground mb-2 font-display">{post.data.title}</h2>
                <p class="text-sm mb-2">{post.data.date.toLocaleDateString()}</p>
                <p class="mb-4">{post.data.description}</p>  
            </div>
        </div>
    </a>
</div>