---
import { Image } from "astro:assets";
import koito from "../images/koito.png";
import { Button } from "@/components/ui/button";
import { Separator } from "@/components/ui/separator";
import { ModeToggle } from "./ModeToggle";
import { fade } from "astro:transitions";
const path = Astro.url.pathname;
---

<div class="flex items-center gap-4">
  <Image
    src={koito}
    transition:name="koito"
    transition:animate={"none"}
    transition:persist
    alt="koito"
    class="w-28 rounded-full"
  />
  <div class="flex flex-col gap-1">
    <h1
      class="text-4xl font-bold text-primary"
      transition:name="mikumino"
      transition:animate="none"
      transition:persist
    >
      mikumino
    </h1>
    <p
      class="text-xl text-muted-foreground"
      transition:name="pronouns"
      transition:animate="none"
      transition:persist
    >
      (he/him)
    </p>
  </div>
</div>

<div class="flex justify-between">
  <div class="flex items-center flex-wrap gap-1">
    <a href="/" transition:name="home-card" transition:animate="none">
      <Button
        variant={"ghost"}
        className={`text-lg ${path === "/" && "text-primary font-bold"}`}
      >
        Home
      </Button>
    </a>
    <a href="/about" transition:name="about-card" transition:animate="none">
      <Button
        variant={"ghost"}
        className={`text-lg ${path.replaceAll("/", "") === "about" && "text-primary font-bold"}`}
      >
        About
      </Button>
    </a>
    <a
      href="/blog"
      transition:name="blog-card"
      transition:animate="none"
      transition:persist
    >
      <Button
        variant={"ghost"}
        className={`text-lg ${path.replaceAll("/", "") === "blog" && "text-primary font-bold"}`}
      >
        Blog
      </Button>
    </a>
    <a
      href="/resources"
      transition:name="resources-card"
      transition:animate="none"
      transition:persist
    >
      <Button
        variant={"ghost"}
        className={`text-lg ${path.replaceAll("/", "") === "resources" && "text-primary font-bold"}`}
      >
        Resources
      </Button>
    </a>
    <a
      href="/other"
      transition:name="other-card"
      transition:animate="none"
      transition:persist
    >
      <Button
        variant={"ghost"}
        className={`text-lg ${path.replaceAll("/", "") === "other" && "text-primary font-bold"}`}
      >
        Other
      </Button>
    </a>
  </div>
  <div
    transition:name="mode-toggle"
    transition:animate="none"
    transition:persist
  >
    <ModeToggle client:load />
  </div>
</div>

<Separator />
