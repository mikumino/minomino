---
import { Image } from "astro:assets";
const {post} = Astro.props;
---
<div class="break-inside-avoid-column">
    <a class="group" href={`/personal-guides/${post.slug}`}>
        <div class="card w-full shadow-xl mb-6 group-hover:-translate-y-2 transition">
            <Image transition:name={post.data.title} src={post.data.image} alt={post.data.imageAlt} class="w-full mx-auto rounded-lg mb-2" />
            <div class="py-4 px-6">
                <h2 class="text-3xl font-bold text-accent mb-2 font-display">{post.data.title}</h2>
                <p class="mb-4">{post.data.description}</p>  
            </div>
        </div>
    </a>
</div>