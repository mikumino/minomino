---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";

const resources = await getCollection("resources");
---

<BaseLayout title="Resources - minomino">
  <div class="my-6 mx-6 md:mx-auto md:max-w-4xl" transition:name="card">
    <h1 class="text-4xl font-bold">Resources</h1>
    <div class="flex flex-col gap-4">
      {
        resources.map((resource) => (
          <a
            href={`/resources/${resource.slug}`}
            class="flex flex-col gap-2 rounded-lg p-4 transition:all hover:bg-popover"
          >
            <h2 class="text-xl font-bold">{resource.data.title}</h2>
            <p class="text-sm text-muted-foreground">
              {resource.data.description}
            </p>
          </a>
        ))
      }
    </div>
  </div>
  <Footer />
</BaseLayout>
