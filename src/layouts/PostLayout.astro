---
import Navbar from '../components/Navbar.astro';
import { Image } from 'astro:assets';
import icon from "/favicon.ico";
const {frontmatter} = Astro.props;
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
---
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{frontmatter.title} - minomino</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href={icon} type="image/x-icon" />
        <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>

        <meta property="og:title" content=`${frontmatter.title} - mikumino` />
        <meta property="og:description" content={frontmatter.data.description} />
        <meta property="og:image" content={frontmatter.data.image.src} />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="theme-color" content="#e64c3e">
        <ViewTransitions />
    </head>
    <body>
        <div>
            <Navbar />
        </div>
        <div class="flex flex-col mt-4 mb-6 mx-6 md:mx-auto md:max-w-fit">
            <div class="breadcrumbs mb-4">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li>{frontmatter.title}</li>
                </ul>
            </div>
            <h1 class="text-4xl font-bold mb-4" >{frontmatter.title}</h1>
            <article class="prose lg:prose-lg prose-a:decoration-mino-500 prose-a:underline-offset-4 prose-a:decoration-2 prose-a:bg-opacity-70 hover:prose-a:bg-mino-500 prose-a:transition-all max-w-3xl min-h-screen">
                <Image src={frontmatter.image} alt="Post image" class="rounded-xl mb-4" transition:name={frontmatter.title} />
                <slot />
            </article>
        </div>
    </body>
    <Footer />
</html>